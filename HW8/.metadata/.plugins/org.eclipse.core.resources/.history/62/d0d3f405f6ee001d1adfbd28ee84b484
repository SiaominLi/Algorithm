
public class HW08_4109037012_2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	public int maxAreaOfIsland(int[][] grid) {
        int ans=0;
        int m = grid.length;
        int n = grid[0].length;
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                //perform dfs of an island
                if (grid[i][j] == 1) 
                    ans = Math.max(dfs(grid, i, j, m, n), ans);
            }
        }
        return ans;
    }

    public int dfs(int[][] grid, int i, int j, int m, int n) {
        //we went out of bound
        if (
            i < 0 || j < 0 || i >= m || j >= n || grid[i][j] == 0
        ) return 0;
        grid[i][j] = 0;
        //dfs through all 4 sides
        return 1+dfs(grid, i - 1, j, m, n)
        + dfs(grid, i + 1, j, m, n)
        + dfs(grid, i, j - 1, m, n)
        + dfs(grid, i, j + 1, m, n);
        
    }

}
